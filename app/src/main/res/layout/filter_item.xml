<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cuisine_id"
        android:layout_width="@dimen/common_spacing"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/common_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cuisine_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/cuisine_checkbox"
        android:visibility="invisible"
        tools:text="0" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cuisine_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toEndOf="@id/cuisine_id" />
</androidx.constraintlayout.widget.ConstraintLayout>